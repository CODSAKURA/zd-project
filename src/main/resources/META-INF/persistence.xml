<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence">

    <!--声明当前JPA实现的单元：Hibernate-->
    <persistence-unit name="hibernateJPA" transaction-type="RESOURCE_LOCAL">
        <!--JPA的实现方式：Hibernate-->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- 扫描并映射pojo包中的所有类 -->
        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <!--数据库连接信息-->
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/zd_project?currentSchema=public&amp;useSSL=false&amp;useServerPrepStmts=true"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="zdzfl001183"/>

            <!--Hibernate独有的配置信息-->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
        </properties>
    </persistence-unit>
</persistence>
